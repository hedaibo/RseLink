<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/device_list_bg"
    android:keepScreenOn="true">

    <LinearLayout
        android:id="@+id/ll_top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/iv_search_voxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:background="@mipmap/rse_link_zi"
        android:textColor="@drawable/black"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/iv_search_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="3dp"
        android:textStyle="bold"
        android:text="@string/tv_voxx_info"
        android:textColor="@drawable/white"
        android:textSize="18sp" />




            <TextView
                android:id="@+id/iv_search_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_little"
                android:layout_marginTop="3dp"
                android:paddingLeft="20dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:text="@string/tv_voxx_device"
                android:textColor="@drawable/white"
                android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_scan_devices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:paddingRight="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:text="@string/tv_scan_device"
            android:textSize="@dimen/tv_size"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:background="@drawable/scan_devices_selector"/>


    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_alignBottom="@id/ll_top_ll"
        android:background="@android:color/transparent"
        android:layout_height="1dp"/>


    <ListView
        android:id="@+id/remote_device_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/view_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="35dp"
        android:padding="5dp"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/iv_search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:visibility="gone"
        android:text="@string/tv_search"
        android:textColor="@drawable/color_pink"
        android:layout_marginTop="30dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/iv_search_version_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textColor="@drawable/white"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@mipmap/voxx_link_white_1"/>

</RelativeLayout>